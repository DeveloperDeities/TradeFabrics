<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0E0E"
    android:orientation="vertical"
    tools:context=".RoleSelectionPage">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="111dp"
        android:backgroundTintMode="src_over">

        <ImageView
            android:id="@+id/userpageforbuying"
            android:layout_width="match_parent"
            android:layout_height="332dp"
            app:srcCompat="@drawable/buyer_signup_page" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-3dp"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/merchantimagetosell"
            android:layout_width="match_parent"
            android:layout_height="299dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/merchant_signup_page" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="-387dp"
        android:layout_marginBottom="11dp"
        android:backgroundTint="@color/common_google_signin_btn_text_light_disabled"
        android:drawableTint="@color/colorPrimaryDark"
        android:freezesText="false"
        android:text="CHOOSE ROLE"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#EDE9E9"
        android:textDirection="anyRtl"
        android:textSize="40sp" />

</LinearLayout>